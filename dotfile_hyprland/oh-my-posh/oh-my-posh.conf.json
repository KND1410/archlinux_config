{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "type": "prompt",
      "segments": [
        {
          "background": "#BF231D",
          "foreground": "#000000",
          "style": "plain",
          "template": " \uf0e7 ",
          "type": "root"
        },
        {
          "background": "#DA627D",
          "foreground": "#000000",
          "style": "plain",
          "template": " {{ .Icon }} ",
          "type": "os"
        },
        {
          "background": "#DA627D",
          "foreground": "#000000",
          "style": "plain",
          "template": " {{ .UserName }} ",
          "type": "session"
        },
        {
          "background": "#FCA17D",
          "foreground": "#000000",
          "properties": {
            "folder_icon": "\uf115",
            "folder_separator_icon": " \ue0b1 ",
            "max_depth": 2,
            "style": "agnoster_short"
          },
          "style": "plain",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "#86BBD8",
          "foreground": "#000000",
          "properties": {
            "branch_max_length": 30,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": " [ {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ] ",
          "type": "git"
        },
        {
          "background": "#33658A",
          "foreground": "#000000",
          "style": "plain",
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} ",
          "type": "python"
        },
        {
          "background": "#B4A7D6",
          "foreground": "#000000",
          "properties": {
            "time_format": "15:04"
          },
          "style": "plain",
          "template": " \u2665 {{ .CurrentDate | date .Format }} ",
          "type": "time"
        },
        {
          "foreground": "#B4A7D6",
          "style": "plain",
          "template": "\ue0b0 ",
          "type": "text"
        }
      ]
    },
    {
      "alignment": "left",
      "type": "prompt",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#B7EA71",
          "template": "‚ùØ "
        }
      ]
    }
  ],
  "version": 2
}
